    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/ActAnimationStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActAnimationStyle" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_act_anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/base_act_anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_act_back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/base_act_back_exit</item>
    </style>

    <style name="bottom_top_style">
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>

    <style name="all_padding" parent="@style/bottom_top_style">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="edit_stype">
        <item name="android:padding">8dip</item>
    </style>

    <style name="left_right_padding">
        <item name="android:paddingLeft">@dimen/px32</item>
        <item name="android:paddingRight">@dimen/px32</item>
    </style>

    <style name="left_right_margin">
        <item name="android:layout_marginLeft">@dimen/px32</item>
        <item name="android:layout_marginRight">@dimen/px32</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
