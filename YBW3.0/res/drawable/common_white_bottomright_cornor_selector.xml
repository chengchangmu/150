<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="@color/common_btn_white_bg_press" android:gradientRadius="270" android:startColor="@color/common_btn_white_bg_press" android:type="radial" />

			<stroke android:width="0.5dp" android:color="@color/common_line"/>
            <corners android:bottomRightRadius="8dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:endColor="@color/common_btn_white_bg_press" android:startColor="@color/common_btn_white_bg_press" />

			<stroke android:width="0.5dp" android:color="@color/common_line"/>
            <corners android:bottomRightRadius="8dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/common_grey_bg_color" />

			<stroke android:width="0.5dp" android:color="@color/common_line"/>
            <corners android:bottomRightRadius="8dp" />
        </shape></item>

</selector>