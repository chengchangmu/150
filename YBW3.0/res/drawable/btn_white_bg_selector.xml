<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="@color/common_btn_red_bg" />

            <solid android:color="@color/common_btn_white_bg_press" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <stroke android:width="1dp" android:color="@color/common_btn_red_bg" />

            <solid android:color="@color/common_btn_white_bg" />

            <corners android:radius="5dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/common_btn_white_bg" />

            <stroke android:width="1dp" android:color="@color/common_btn_red_bg" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>