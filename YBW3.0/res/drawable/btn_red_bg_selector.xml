<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="@color/common_btn_red_bg_press" android:gradientRadius="50" android:startColor="@color/common_btn_red_bg_press" android:type="radial" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:endColor="@color/common_btn_red_bg" android:gradientRadius="50" android:startColor="@color/common_btn_red_bg" android:type="radial" />

            <corners android:radius="5dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/common_btn_red_bg" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>