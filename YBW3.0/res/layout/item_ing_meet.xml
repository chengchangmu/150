<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey_bg_color"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg"
        android:orientation="horizontal" >

        <com.scsy150.util.view.CircleImageView
            android:id="@+id/item_ing_img"
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px180"
            android:layout_margin="@dimen/px20"
            android:scaleType="fitXY"
            android:src="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_ing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@null"
                android:textColor="@color/item_title"
                android:textSize="@dimen/font_26px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_ing_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@null"
                android:textColor="@color/item_desc_time"
                android:textSize="@dimen/font_26px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_ing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@null"
                android:textColor="@color/item_desc_time"
                android:textSize="@dimen/font_26px"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg" >

        <TextView
            android:id="@+id/item_ing_meet"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px20"
            android:textColor="@color/common_btn_bg"
            android:text="@string/meet_detail"
            android:textSize="@dimen/font_36px" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/common_line" />

        <TextView
            android:id="@+id/item_ing_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px20"
            android:text="@string/order_details_title"
            android:textColor="@color/common_btn_bg"
            android:textSize="@dimen/font_36px" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

</LinearLayout>