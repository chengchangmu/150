<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/payment_item_bg_selector"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px32"
    android:paddingLeft="@dimen/px40"
    android:paddingRight="@dimen/px40"
    android:paddingTop="@dimen/px32" >

    <ImageView
        android:id="@+id/type_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/type_name_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/type_img" >

        <TextView
            android:id="@+id/type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_black_word"
            android:textSize="@dimen/font_30px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/type_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_name_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/type_img"
        android:singleLine="true"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/type_select_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/paytype_item_check_selector"
        android:button="@null" />

</RelativeLayout>