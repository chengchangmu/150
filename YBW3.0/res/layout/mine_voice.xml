<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:background="@color/common_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px10"
            android:drawableLeft="@drawable/info_voice_h"
            android:drawablePadding="@dimen/px4"
            android:gravity="center_vertical"
            android:text="@string/info_base"
            android:textSize="@dimen/font_32px" />
    </LinearLayout>

    <Chronometer
        android:id="@+id/timedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/record"
        android:layout_centerHorizontal="true"
        android:text="05:00"
        android:textColor="@color/bule"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/px50"
        android:background="@drawable/voice_selector"
        android:scaleType="center" />

</RelativeLayout>