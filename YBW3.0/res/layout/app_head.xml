<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px90"
    android:background="@color/common_btn_red_text" >

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="@dimen/px72"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px20"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerInside"
        android:src="@drawable/back_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/px20"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/common_btn_white_text"
        android:textSize="@dimen/font_34px"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="@dimen/px114"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/px114"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginEnd="@dimen/px20"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px40"
            android:layout_marginEnd="@dimen/px40"
            android:clickable="true"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@drawable/common_btn_white_text_selector"
            android:textSize="@dimen/font_36px"
            android:visibility="invisible" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_choice"
        android:layout_width="@dimen/px366"
        android:layout_height="@dimen/px96"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/px195"
        android:layout_marginStart="@dimen/px195"
        android:orientation="horizontal"
        android:padding="@dimen/px10"
        android:visibility="@null" >

        <RadioButton
            android:id="@+id/near"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/order_status_bar_button_left_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="@dimen/px4"
            android:paddingTop="@dimen/px4"
            android:text="@string/nearby"
            android:textColor="@color/order_status_bar_button"
            android:textSize="@dimen/font_26px" />

        <RadioButton
            android:id="@+id/hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_hot"
            android:button="@null"
            android:checked="false"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/px4"
            android:paddingTop="@dimen/px4"
            android:text="@string/hot"
            android:textColor="@color/order_status_bar_button"
            android:textSize="@dimen/font_26px" />

        <RadioButton
            android:id="@+id/recent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/order_status_bar_button_right_bg"
            android:button="@null"
            android:checked="false"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/px4"
            android:paddingTop="@dimen/px4"
            android:text="@string/newest"
            android:textColor="@color/order_status_bar_button"
            android:textSize="@dimen/font_26px" />
    </RadioGroup>

    <TextView
        android:id="@+id/middle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/px12"
        android:paddingRight="@dimen/px12"
        android:singleLine="true"
        android:textColor="@color/common_btn_white_text"
        android:textSize="@dimen/font_34px"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/middle_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/px12"
        android:paddingRight="@dimen/px12"
        android:visibility="invisible" />
    
</RelativeLayout>