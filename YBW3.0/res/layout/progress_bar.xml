<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressBar_View"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/px240"
        android:layout_height="@dimen/px240"
        android:layout_margin="@dimen/px12"
        android:background="@drawable/progress_drawable"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px32" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/progress_bar_dlg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px12"
            android:singleLine="true"
            android:text="@string/tip"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_28px" />
    </LinearLayout>

</LinearLayout>