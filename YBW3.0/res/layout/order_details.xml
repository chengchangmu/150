<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey_bg_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20" >
            </View>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_num"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" >
                    </TextView>

                    <TextView
                        android:id="@+id/order_details_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_status"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/order_nor" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_type"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_date"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg" >

                <TextView
                    android:id="@+id/order_details_mer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px20"
                    android:text="@null"
                    android:textColor="@color/item_title" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/order_details_img"
                    android:layout_width="@dimen/px240"
                    android:layout_height="@dimen/px180"
                    android:layout_margin="@dimen/px20"
                    android:scaleType="fitXY"
                    android:src="@drawable/advert_00" />

                <TextView
                    android:id="@+id/order_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px20"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@null"
                    android:textColor="@color/item_desc_time"
                    android:textSize="@dimen/font_26px"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px20"
                        android:text="@string/order_details_pingfen"
                        android:textSize="@dimen/font_36px" />

                    <TextView
                        android:id="@+id/order_real_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px20"
                        android:paddingTop="@dimen/px20"
                        android:text="@string/order_money"
                        android:textColor="@color/order_nor"
                        android:textSize="@dimen/font_36px" />
                </LinearLayout>

                <Button
                    android:id="@+id/order_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px50"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/px14"
                    android:background="@drawable/btn_white_bg_selector"
                    android:padding="@dimen/px10"
                    android:text="@string/order_evaluation"
                    android:textColor="@color/order_nor"
                    android:textSize="@dimen/font_28px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_pay_mode"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" >
                    </TextView>

                    <TextView
                        android:id="@+id/order_details_pay_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_refund_date"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_refund_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_item_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_totak"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" >
                    </TextView>

                    <TextView
                        android:id="@+id/order_details_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_value"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/order_nor" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_rapy_ratio"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_rapy_ratio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px30"
                    android:background="@color/common_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px30"
                        android:paddingRight="@dimen/px30"
                        android:text="@string/order_details_refund"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/order_details_refund"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/px25"
                        android:gravity="right|center_vertical"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/common_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>