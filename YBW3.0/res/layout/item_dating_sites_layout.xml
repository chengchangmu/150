<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginBottom="@dimen/px20"
        android:id="@+id/iv_bs_url"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:src="@drawable/clock" />

    <LinearLayout
        android:layout_marginTop="@dimen/px20"
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:layout_marginLeft="@dimen/px20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px200"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_bsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="@dimen/font_34px"
            android:textColor="@color/black_font" />


        <TextView
            android:id="@+id/tv_bs_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10"
            android:textColor="@color/black_font" />

        <TextView
            android:id="@+id/tv_bs_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/px14"
            android:drawablePadding="@dimen/px10"
            android:textSize="@dimen/font_28px"
            android:textColor="@color/black_font" />
    </LinearLayout>

</LinearLayout>