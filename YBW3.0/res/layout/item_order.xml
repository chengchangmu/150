<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey_bg_color"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20" >
    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg" >

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px20"
            android:text="@null"
            android:textColor="@color/item_title" />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/px20"
            android:text="@string/alipay_status_ok"
            android:textColor="@color/order_nor" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px180"
            android:layout_margin="@dimen/px20"
            android:scaleType="fitXY"
            android:src="@drawable/advert_00" />

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px20"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@null"
            android:textColor="@color/item_desc_time"
            android:textSize="@dimen/font_26px"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20"
                android:text="@string/order_real_payment"
                android:textSize="@dimen/font_36px" />

            <TextView
                android:id="@+id/order_real_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:text="@string/order_money"
                android:textColor="@color/order_nor"
                android:textSize="@dimen/font_36px" />
        </LinearLayout>

        <Button
            android:id="@+id/order_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px50"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px14"
            android:background="@drawable/btn_white_bg_selector"
            android:padding="@dimen/px10"
            android:text="@string/order_evaluation"
            android:textColor="@color/order_nor"
            android:textSize="@dimen/font_28px" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

</LinearLayout>