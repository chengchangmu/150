<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey_bg_color"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60" />

    <TextView
        android:id="@+id/item_sys_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/px4"
        android:textSize="@dimen/font_32px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ems="5"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/px20"
                        android:paddingRight="@dimen/px20"
                        android:text="@string/system_app_item_mer"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/item_sys_mer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px20"
                        android:paddingRight="@dimen/px20"
                        android:text="@string/system_app_item_name"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/item_sys_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/px20"
                        android:paddingRight="@dimen/px20"
                        android:text="@string/system_app_item_total"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/item_sys_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ems="5"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="@dimen/px20"
                        android:paddingRight="@dimen/px20"
                        android:text="@string/system_app_item_desc"
                        android:textColor="@color/item_desc_time"
                        android:textSize="@dimen/font_32px" />

                    <TextView
                        android:id="@+id/item_sys_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginRight="@dimen/px20"
                android:gravity="center"
                android:orientation="vertical" >

                <com.scsy150.util.view.CircleImageView
                    android:id="@+id/item_sys_img"
                    android:layout_width="@dimen/px144"
                    android:layout_height="@dimen/px144"
                    android:layout_gravity="center"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/item_sys_each_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px10"
                    android:gravity="center_horizontal"
                    android:textColor="@color/item_desc_time"
                    android:textSize="@dimen/font_32px" />

                <TextView
                    android:id="@+id/item_sys_each_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/male"
                    android:gravity="center_horizontal"
                    android:textColor="@color/item_desc_time"
                    android:textSize="@dimen/font_32px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_sys_do"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100" >

            <TextView
                android:id="@+id/item_sys_rfeuse"
                style="@style/common_red_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginTop="@dimen/px20"
                android:layout_weight="1"
                android:text="@string/rfeuse" />

            <View
                android:layout_width="@dimen/px20"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/item_sys_agree"
                style="@style/common_orange_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80"
                android:layout_marginRight="@dimen/px20"
                android:layout_marginTop="@dimen/px20"
                android:layout_weight="1"
                android:text="@string/agree" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_sys_operation_failure"
            style="@style/common_grey_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginTop="@dimen/px20"
            android:layout_weight="1"
            android:text="@string/operation_failure" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20" />

</LinearLayout>