<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/px20"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/gban" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px18"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:layout_marginTop="@dimen/px40"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_hz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_40px" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:src="@drawable/female"
            android:textSize="@dimen/font_40px" />

        <TextView
            android:id="@+id/tv_hz_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:text="90åŽ"
            android:textSize="@dimen/font_40px" />

        <Button
            android:id="@+id/bt_promptly"
            android:layout_width="@dimen/px254"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_or_bt"
            android:text="@string/now_date"
            android:textColor="@color/white_font"
            android:textSize="@dimen/font_40px" />
    </LinearLayout>

</LinearLayout>