<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        style="@style/all_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/common_orange"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/common_divider_color" />

    <ScrollView
        style="@style/all_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="60dip"
            android:textColor="@color/common_deep_grey_word"
            android:textSize="20sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_left_btn"
            style="@style/all_padding"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:layout_marginRight="-1dip"
            android:background="@drawable/blue_selector"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_right_btn"
            style="@style/all_padding"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginRight="-1dip"
            android:background="@drawable/blue_selector"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>