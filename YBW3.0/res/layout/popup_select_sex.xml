<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/px10"
    android:background="@color/blue_light"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_member_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px16"
            android:text="@string/reverlall"
            android:textColor="@color/white_font"
            android:textSize="@dimen/font_64px" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/common_line" />

    <LinearLayout
        android:id="@+id/llayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_female_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px16"
            android:text="@string/only_female"
            android:textColor="@color/white_font"
            android:textSize="@dimen/font_64px" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/common_line" />

    <LinearLayout
        android:id="@+id/llayout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
             android:id="@+id/tv_male_only"
            android:layout_height="wrap_content"
            android:padding="@dimen/px16"
            android:text="@string/only_male"
            android:textColor="@color/white_font"
            android:textSize="@dimen/font_64px" />
    </LinearLayout>

</LinearLayout>