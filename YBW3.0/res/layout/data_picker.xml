<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white_bg_color"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/common_bar_bg_color"
        android:gravity="center" >

        <Button
            android:id="@+id/daypicker_cancle"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px90"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/px26"
            android:text="@string/cancel"
            android:textColor="@drawable/common_btn_black_text_selector"
            android:textSize="@dimen/font_36px" />

        <TextView
            android:id="@+id/zditdialog_title"
            android:layout_width="0dip"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_40px" />

        <Button
            android:id="@+id/daypicker_ok"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px90"
            android:background="@color/transparent"
            android:paddingRight="@dimen/px26"
            android:text="@string/finish"
            android:textColor="@drawable/common_btn_black_text_selector"
            android:textSize="@dimen/font_36px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px340"
        android:background="@color/common_white_bg_color"
        android:gravity="center_vertical" >

        <com.scsy150.widget.datapicker.WheelView
            android:id="@+id/daypicker_year"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px340"
            android:layout_weight="1" />

        <com.scsy150.widget.datapicker.WheelView
            android:id="@+id/daypicker_month"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px340"
            android:layout_weight="1" />

        <com.scsy150.widget.datapicker.WheelView
            android:id="@+id/daypicker_day"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px340"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>