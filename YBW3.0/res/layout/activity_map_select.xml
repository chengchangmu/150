<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/map_head_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_grey_bg_color"
            android:gravity="center"
            android:padding="@dimen/px12"
            android:singleLine="true"
            android:textColor="@color/common_black_word"
            android:textSize="@dimen/font_24px" />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/map_select_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/map_select_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/btn_hand_write" />

</FrameLayout>