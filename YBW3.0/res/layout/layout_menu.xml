<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:orientation="vertical"
    android:padding="@dimen/px20" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center_horizontal"
        android:text="@string/condition"
        android:textSize="@dimen/px36" />

    <ListView
        android:id="@+id/lv_condition"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/px20"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="@null"
        android:gravity="center_horizontal"
        android:textSize="@dimen/px36" />

    <LinearLayout
        android:id="@+id/base_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90"
        android:layout_gravity="bottom"
        android:background="@color/layout_grey_bg"
        android:layout_marginTop="@dimen/px20"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/common_btn_red_text"
            android:clickable="true"
            android:drawableLeft="@drawable/xbn"
            android:drawableStart="@drawable/xbn"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/share"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/tv_enroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F86C14"
            android:clickable="true"
            android:drawableLeft="@drawable/xbnv"
            android:drawableStart="@drawable/xbnv"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/signup_immediately"
            android:textSize="@dimen/px32" />
    </LinearLayout>

</LinearLayout>